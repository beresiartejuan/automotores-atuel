---
interface Props {
    id: string; // CHAR(36)
    name: string; // VARCHAR(255)
    model: string; // VARCHAR(255)
    year: number; // INT
    isUsed: boolean; // BOOLEAN
    mileage: string; // VARCHAR(255)
}

const { name, model, year, isUsed, mileage, id } = Astro.props;
const mileageText = isUsed ? mileage : "0km";
---

<div
    class="card"
    role="article"
    car-id={id}
    aria-labelledby={`card-title-${id}`}
>
    <div class="card__image">
        <img
            src="/auto.jpg"
            alt={`Imagen de ${name}, modelo ${model}`}
            loading="lazy"
        />
    </div>

    <div class="card__info">
        <h4 id={`card-title-${id}`} class="card__info__title">{name}</h4>
        <p class="card__info__details">
            <span class="card__info__model">{model}</span>
            <span class="card__info__year-mileage">{year} | {mileageText}</span>
        </p>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll("div.card[car-id]").forEach((card) => {
            if (!card.getAttribute("car-id")) return;

            const car_id = card.getAttribute("car-id")!;

            card.addEventListener("click", (e) => {
                e.preventDefault();
                window.location.href = `/autos/${car_id}`;
            });
        });
    });
</script>

<style lang="scss">
    :root {
        --color-bg: #fff;
        --color-shadow: rgba(0, 0, 0, 0.2);
        --color-shadow-hover: rgba(0, 0, 0, 0.45);
        --color-text: #333;
        --color-muted: #888;
        --color-button: #222425;
        --color-button-hover: #0056b3;
        --border-radius: 10px;
        --spacing: 10px;
    }

    .card {
        font-family: "Kanit", sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: var(--color-bg);
        border-radius: var(--border-radius);
        box-shadow: 0 4px 10px var(--color-shadow);
        max-width: 18rem;
        margin: 0 auto;
        overflow: hidden;
        cursor: pointer;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;

        &:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px var(--color-shadow-hover);
        }

        &__image img {
            width: 100%;
            height: auto;
            object-fit: cover;
            border-bottom: 1px solid #e0e0e0;
        }

        &__info {
            padding: var(--spacing);
            width: 100%;
            text-align: center;

            &__title {
                font-size: 1.3rem;
                font-weight: 600;
                color: var(--color-text);
                margin: var(--spacing) 0;
            }

            &__details {
                font-size: 1rem;
                color: var(--color-muted);
                margin-bottom: var(--spacing);
                font-weight: 300;
                text-align: left;
                padding-left: 5%;

                span {
                    display: block;
                    line-height: 1.4rem;
                }
            }
        }
    }
</style>
